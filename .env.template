# Super Alita Environment Configuration Template
# Copy this to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Google Gemini API (for LLM capabilities)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# GitHub Personal Access Token (for code search capabilities)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Performance Settings
MAX_CONCURRENT_OPERATIONS=10
ENABLE_PERFORMANCE_MONITORING=true

# Event Bus Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
EVENT_BUS_TIMEOUT=30

# Neural Architecture Settings
MAX_NEURAL_ATOMS=1000
MEMORY_RETENTION_DAYS=30
ENABLE_GENEALOGY_TRACKING=true

# Development Settings (set to false for production)
DEBUG_MODE=false
ENABLE_HOT_RELOAD=false
VERBOSE_LOGGING=false

# Security Settings
SANDBOX_EXECUTION=true
ALLOW_CODE_GENERATION=true
MAX_CALCULATION_DEPTH=100

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# World Model Settings
PREDICTIVE_MODELING=true
WORLD_MODEL_UPDATE_INTERVAL=3600

# Plugin Configuration
AUTO_DISCOVERY_PLUGINS=true
PLUGIN_TIMEOUT=60

# Monitoring & Telemetry
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=30