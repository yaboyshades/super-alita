# .env.example
# Copy to .env and customize

# ===== Execution Guardrails =====
REUG_MAX_TOOL_CALLS=5
REUG_EXEC_TIMEOUT_S=20.0
REUG_MODEL_STREAM_TIMEOUT_S=60.0
REUG_EXEC_MAX_RETRIES=1
REUG_RETRY_BASE_MS=250
REUG_SCHEMA_ENFORCE=true

# ===== Persistence & Logging =====
REUG_EVENT_LOG_DIR=./logs/events
REUG_TOOL_REGISTRY_DIR=./tools_registry

# ===== LLM Provider (choose one) =====
# OPENAI_API_KEY=sk-your-key-here
# GEMINI_API_KEY=your-gemini-key-here
# ANTHROPIC_API_KEY=your-claude-key-here

# ===== General =====
PYTHONPATH=./src
