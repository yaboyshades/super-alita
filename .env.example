# .env.example
# Copy to .env and customize

# ===== Execution Guardrails =====
REUG_MAX_TOOL_CALLS=5
REUG_EXEC_TIMEOUT_S=20.0
REUG_MODEL_STREAM_TIMEOUT_S=60.0
REUG_EXEC_MAX_RETRIES=1
REUG_RETRY_BASE_MS=250
REUG_SCHEMA_ENFORCE=true

# ===== Persistence & Logging =====
REUG_EVENT_LOG_DIR=./logs/events
REUG_TOOL_REGISTRY_DIR=./tools_registry
# MCP telemetry endpoint (optional)
MCP_BROADCAST_URL=
MCP_BROADCAST_TOKEN=

# ===== LLM Provider (choose one) =====
# OPENAI_API_KEY=sk-your-key-here
# GEMINI_API_KEY=your-gemini-key-here
# ANTHROPIC_API_KEY=your-claude-key-here

# ===== Puter Cloud Environment =====
# Default remote instance
PUTER_BASE_URL=https://puter.com
# PUTER_API_KEY=your_puter_api_key_here
# PUTER_WORKSPACE_ID=default
# For local hosting, override base URL:
# PUTER_BASE_URL=http://localhost:4100

# ===== General =====
PYTHONPATH=./src

# ACP Server Configuration
ACP_HOST=0.0.0.0
ACP_PORT=8000
ACP_REQUIRE_AUTH=false
ACP_API_KEY=test-key
LOG_LEVEL=INFO

# Search API Keys (optional)
SERPAPI_KEY=your_serpapi_key_here
BING_API_KEY=your_bing_key_here
GOOGLE_CSE_ID=your_google_cse_id
GOOGLE_API_KEY=your_google_api_key
YOUTUBE_API_KEY=your_youtube_key
WOLFRAM_APP_ID=your_wolfram_id

# LLM Configuration
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=86400
